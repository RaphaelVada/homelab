{
  "customizations": {
    "vscode": {
      "extensions": [
        // Kubernetes & Cloud Native
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "mindaro.mindaro",
        
        // YAML & Configuration
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        
        // Infrastructure as Code
        "redhat.ansible",
        "wholroyd.jinja",
        "hashicorp.hcl",
        
        // Entwicklung & Debugging
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "wayou.vscode-todo-highlight",
        
        // Dokumentation
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "jebbs.plantuml",
        "hediet.vscode-drawio",
        "pomdtr.excalidraw-editor",
        
        // Terminal & Shell
        "timonwong.shellcheck",
        "foxundermoon.shell-format",
        "ms-vscode.remote-containers",
        
        // Produktivit√§t
        "streetsidesoftware.code-spell-checker",
        "vscode-icons-team.vscode-icons",
        "christian-kohler.path-intellisense",
        "oderwat.indent-rainbow"
      ],
      "settings": {
        // YAML Konfiguration
        "yaml.schemas": {
          "kubernetes": ["/*.k8s.yaml", "/*.k8s.yml", "/k8s/**/*.yaml"],
          "http://json.schemastore.org/ansible-playbook": ["/*playbook.yml", "/*playbook.yaml"]
        },
        "[yaml]": {
          "editor.defaultFormatter": "redhat.vscode-yaml",
          "editor.formatOnSave": true,
          "editor.insertSpaces": true,
          "editor.tabSize": 2,
          "editor.autoIndent": "keep"
        },
        
        // Kubernetes Konfiguration
        "vs-kubernetes": {
          "vs-kubernetes.namespace": "",
          "vs-kubernetes.kubectl-path": "/usr/local/bin/kubectl",
          "vs-kubernetes.helm-path": "/usr/local/bin/helm"
        },
        
        // Git Konfiguration
        "git.enableSmartCommit": true,
        "git.autofetch": true,
        "gitlens.codeLens.enabled": true,
        
        // Terminal Konfiguration
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.fontFamily": "MesloLGS NF",
        
        // Editor Allgemein
        "editor.formatOnSave": true,
        "editor.rulers": [80, 120],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
      }
    }
  }
}